<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/listView"
            android:layout_below="@+id/mobileNumber" android:layout_alignLeft="@+id/mobileNumber"
            android:layout_above="@+id/editText"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:editable="true"
            android:layout_above="@+id/clearButton" android:layout_alignLeft="@+id/listView"
            android:hint="Your Message"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/button"
            android:layout_marginBottom="10dp" android:background="#44b0ff" android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/editText"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearButton"
            android:layout_above="@+id/button" android:layout_alignLeft="@+id/editText"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/mobileNumber" android:layout_alignParentLeft="true"
            android:hint="Mobile Number"/>
</RelativeLayout>
